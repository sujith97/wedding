@import url('https://fonts.googleapis.com/css?family=Josefin+Sans:400,600')

body
	background-color white
	background url('../images/background_img.png')
	font-family 'Josefin Sans', sans-serif
	[data-ui-view]
		height 90%
	.main
		display flex
		justify-content center
		img
			position absolute
			@media screen and (min-width: 400px)
				width 86%
				height 6%
				left 6%
			@media screen and (min-width: 800px)
				width 60%
				height 7%
				left 23%
			@media screen and (min-width: 900px)
				width 50%
				height 10%
				left 25%
		@media screen and (min-width: 400px)	
			.title
				text-align center
				width 100%
				padding-top 10%
				font-size 2em
		@media screen and (min-width: 700px)	
			.title
				text-align center
				width 100%
				padding-top 5%
				font-size 2.7em
		@media screen and (min-width: 900px)	
			.title
				text-align center
				width 100%
				padding-top 5%
				font-size 3em
	.flx
		display flex
		justify-content center
		@media screen and (min-width: 400px)
			.pointing.menu
				padding-top 2%
				width 85%
				font-size 0.8em
		@media screen and (min-width: 700px)
			.pointing.menu
				padding-top 2%
				width 70%
				font-size 1em
		@media screen and (min-width: 900px)
			.pointing.menu
				padding-top 2%
				width 50%
				font-size 1.1em
	.ui.content
		margin 0 10% 0 10%
		.hitched
			padding-top 5%
			font-size 2em
			display flex
			justify-content center
		.grid
			padding-top 5%
		.ticker
			padding-top 2%
			display flex
			justify-content center	
			@media screen and (min-width: 400px)
					.label
						text-align center
						width 20%
						font-size 1em
			@media screen and (min-width: 600px)
					.label
						text-align center
						width 20%
						font-size 1.2em
			@media screen and (min-width: 900px)
					.label
						text-align center
						width 15%
						font-size 2em
					
.ui.card .container .header
	font-family 'Josefin Sans', sans-serif !important